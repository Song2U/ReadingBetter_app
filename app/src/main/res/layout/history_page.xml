<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="History"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="뒤로" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.6">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff91ff1d">

                <TextView
                    android:layout_weight="0.4"
                    android:text=" 책 제목"
                    android:textAlignment="center"
                    android:textSize="25dp" />

                <TextView
                    android:layout_weight="0.3"
                    android:text="점수"
                    android:textAlignment="center"
                    android:textSize="25dp" />

                <TextView
                    android:layout_weight="0.3"
                    android:text="캔디"
                    android:textAlignment="center"
                    android:textSize="25dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/book_no1"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:text="책 제목"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/score1"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text="점수"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/candy1"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text="캔디"
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/book_no2"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/score2"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/candy2"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/book_no3"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/score3"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/candy3"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/book_no4"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/score4"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/candy4"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/book_no5"
                    android:layout_margin="10dp"
                    android:layout_weight="0.4"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/score5"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/candy5"
                    android:layout_margin="10dp"
                    android:layout_weight="0.3"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>